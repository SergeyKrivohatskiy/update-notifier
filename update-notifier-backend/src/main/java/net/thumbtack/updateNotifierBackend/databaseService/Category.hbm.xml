<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Configuration DTD//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
   <class name="main.java.net.thumbtack.updateNotifierBackend.databaseService.ResourceInfo" 
       table="resources">
       
     <id column="category_name" name="name" type="java.lang.String">
     </id>
     
     <set cascade="save-update, delete-orphan" name="resources" table="accountResources" lazy="false">
       <key column="resource_id" not-null="true" />
       <one-to-many
           class="main.java.net.thumbtack.updateNotifierBackend.databaseService.AccountInfo"/>
     </set>
     
     <set cascade="save-update, delete-orphan" name="categories" table="accountCategories" lazy="false">
       <key column="category_name" not-null="true" />
       <many-to-one
           class="main.java.net.thumbtack.updateNotifierBackend.databaseService.ResourceInfo"/>
     </set>
     <many-to-one name="account" class="main.java.net.thumbtack.updateNotifierBackend.databaseService.AccountInfo"
            not-null="true">
        <column name="account_id" />
     </many-to-one>

   </class>
</hibernate-mapping>