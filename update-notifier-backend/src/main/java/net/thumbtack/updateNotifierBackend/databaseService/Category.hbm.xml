<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Configuration DTD//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
   <class name="net.thumbtack.updateNotifierBackend.databaseService.Category" 
       table="CATEGORIES">
       
     <id column="CATEGORY_ID" name="id" type="java.lang.Long">
     </id>
     
     <property column="CATEGORY_NAME" name="name" type="java.lang.String"/>
     
     <set cascade="all" name="resources" table="categoryResources" lazy="false">
       <key column="CATEGORY_ID" not-null="true" />
       <many-to-many column="RESOURCE_ID"
           class="net.thumbtack.updateNotifierBackend.databaseService.ResourceInfo"/>
     </set>
     
     <many-to-one fetch="select" name="account" class="net.thumbtack.updateNotifierBackend.databaseService.AccountInfo">
            <column name="ACCOUNT_ID" not-null="true"/>
     </many-to-one>

   </class>
</hibernate-mapping>