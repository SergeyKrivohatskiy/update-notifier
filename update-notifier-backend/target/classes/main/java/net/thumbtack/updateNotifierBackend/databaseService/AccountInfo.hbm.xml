<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Configuration DTD//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
   <class name="main.java.net.thumbtack.updateNotifierBackend.databaseService.AccountInfo" 
       table="ACCOUNTS">
       
     <id column="ACCOUNT_ID" name="id" type="java.lang.Long">
       <generator class="increment"/>
     </id>
     
     <property column="EMAIL" name="email" type="java.lang.String"/>
     
     <set name="resources" table="RESOURCES" lazy="false" cascade="all" inverse="true" fetch="select">
       <key column="ACCOUNT_ID" not-null="true"/>
       <one-to-many class="main.java.net.thumbtack.updateNotifierBackend.databaseService.ResourceInfo"/>
     </set>

   </class>
</hibernate-mapping>