<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Configuration DTD//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
   <class name="main.java.net.thumbtack.updateNotifierBackend.databaseService.AccountInfo" 
       table="accounts">
       
     <id column="account_id" name="id" type="java.lang.Long">
       <generator class="increment"/>
     </id>
     
     <property column="email" name="email" type="java.lang.String"/>
     
     <set cascade="save-update" name="resources" table="accountResources" lazy="true">
       <key column="account_id"/>
       <many-to-many column="resource_id" 
           class="main.java.net.thumbtack.updateNotifierBackend.databaseService.ResourceInfo"/>
     </set>

   </class>
</hibernate-mapping>